<?xml version="1.0" encoding="utf-8"?>
<shape

    android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">


<!-- Белый цвет фона -->
    <solid android:color="#FFFFFF" />

    <!-- Скругление углов (для 2026 года делаем мягкие углы) -->
    <corners android:radius="12dp" />

    <!-- Тонкая рамка (опционально) -->
    <stroke
        android:width="1dp"
        android:color="#EEEEEE" />

    <!-- Внутренние отступы -->
    <padding
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp"
        android:top="8dp" />
</shape>