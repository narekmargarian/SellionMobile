<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.ReturnDetailsFragment">
    <!-- Header -->
    <!-- Тулбар с кнопкой СОХРАНИТЬ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:elevation="4dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/btnBackFromReturn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tvReturnStoreName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Магазин (Возврат)"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/btnSaveReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="ОФОРМИТЬ"
            android:background="?attr/selectableItemBackground"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/returnTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:tabTextColor="#757575"
        app:tabIndicatorColor="#F44336"
        app:tabSelectedTextColor="#F44336" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/returnViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>


</LinearLayout>